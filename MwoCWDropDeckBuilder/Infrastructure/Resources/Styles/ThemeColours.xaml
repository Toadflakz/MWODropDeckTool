<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Colours  -->

    <Color x:Key="LightBlue">#3399FF</Color>
    <Color x:Key="DarkBlue">#12253F</Color>
    <Color x:Key="DarkerBlue">#0F4982</Color>

    <Color x:Key="DarkGrey">#121212</Color>
    <Color x:Key="DarkerGrey">#1b1c1f</Color>
    <Color x:Key="Grey">#37383A</Color>

    <!--  Brushes  -->

    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource LightBlue}" />

    <LinearGradientBrush x:Key="BackgroundDarkBlueGradientBrush" StartPoint="1,0" EndPoint="1,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0" Color="{StaticResource DarkBlue}" />
            <GradientStop Offset="1" Color="{StaticResource DarkerBlue}" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="BackgroundDarkGreyBrush" Color="{StaticResource DarkGrey}" />
    <SolidColorBrush x:Key="BackgroundAltDarkGreyBrush" Color="{StaticResource DarkerGrey}" />

    <SolidColorBrush x:Key="GreyBorderBrush" Color="{StaticResource Grey}" />
    <SolidColorBrush x:Key="LightBlueBorderBrush" Color="{StaticResource LightBlue}" />

</ResourceDictionary>